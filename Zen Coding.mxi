	<configuration-changes>
		<shortcut-remove id="DWShortcuts_Main_CmdUp" />
		<shortcut-remove id="DWShortcuts_Main_CmdDown" />
		<shortcut-remove id="DWShortcuts_Main_ExitParagraph" />
		<menu-remove id="DWMenu_Commands_ZenCoding_expandAbbreviationWithTab" />
		<shortcut-insert listid="DWHTMLContext">
			<shortcut key="Tab" command="dw.runCommand('ZenCoding.html', 'expand_abbreviation_with_tab')" name="Expand Abbreviation with Zen Coding" id="DWMenu_Shortcut_ZenCoding_expandAbbreviationWithTab" />
		</shortcut-insert>
		<menu-insert prependTo="DWMenu_Commands">
			<menu id="DWMenu_ZenCoding" name="_Zen Coding">
			</menu>
		</menu-insert>
		<menu-insert insertAfter="DWMenu_ZenCoding">
			<separator id="DWMenu_ZenCoding_separator" />
		</menu-insert>
		<menu-insert appendTo="DWMenu_ZenCoding">
			<menuitem id="DWMenu_Commands_ZenCoding_expandAbbreviation" name="_Expand Abbreviation" key="Cmd+," enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'expand_abbreviation')" />
			<menuitem id="DWMenu_Commands_ZenCoding_wrapWithAbbreviation" name="_Wrap with Abbreviation" key="Cmd+H" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'wrap_with_abbreviation')" />
			<separator />
			<menuitem id="DWMenu_Commands_ZenCoding_matchPair" name="Balance Tag" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'match_pair')" />
			<menuitem id="DWMenu_Commands_ZenCoding_matchPairOutward" name="Balance Tag Outward" key="Opt+[" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'match_pair_outward')" />
			<menuitem id="DWMenu_Commands_ZenCoding_matchPairInward" name="Balance Tag Inward" key="Opt+]" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'match_pair_inward')" />
			<menuitem id="DWMenu_Commands_ZenCoding_nextEditPoint" name="_Next Edit Point" key="Cmd+Opt+Right" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'next_edit_point')" />
			<menuitem id="DWMenu_Commands_ZenCoding_prevEditPoint" name="_Previous Edit Point" key="Cmd+Opt+Left" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'prev_edit_point')" />
			<menuitem id="DWMenu_Commands_ZenCoding_goToMatchingPair" name="_Go to Matching Pair" key="Alt+/" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'matching_pair')" />
			<separator />
			<menuitem id="DWMenu_Commands_ZenCoding_insertFormattedNewline" name="_Insert Formatted Newline" key="Cmd+Return" enabled="dw.getFocus(true) == 'document' || dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="if (dw.getFocus() == 'document' && ~dw.getDocumentDOM().getView().indexOf('design') && dw.getDocumentDOM().getFocus() == 'body') dw.getDocumentDOM().exitBlock(); else dw.runCommand('ZenCoding.html', 'insert_formatted_line_break')" />
			<menuitem id="DWMenu_Commands_ZenCoding_selectLine" name="Select _Line" key="Cmd+K" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'select_line')" />
			<menuitem id="DWMenu_Commands_ZenCoding_mergeLines" name="_Merge Lines" key="Cmd+\" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'merge_lines')" />
			<menuitem id="DWMenu_Commands_ZenCoding_toggleComment" name="_Toggle Comment" key="Cmd+/" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'toggle_comment')" />
			<menuitem id="DWMenu_Commands_ZenCoding_splitJoinTag" name="_Split/Join Tag" key="Cmd+Shift+\" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'split_join_tag')" />
			<menuitem id="DWMenu_Commands_ZenCoding_renameTag" name="_Rename Tag" key="Ctrl+Shift+B" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'rename_tag')" />
			<menuitem id="DWMenu_Commands_ZenCoding_removeTag" name="Rem_ove Tag" key="Opt+-" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'remove_tag')" />
			<menuitem id="DWMenu_Commands_ZenCoding_evaluate_math_expression" name="E_valuate Math Expression" key="Opt+=" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'evaluate_math_expression')" />
			<separator />
			<menuitem id="DWMenu_Commands_ZenCoding_increment_number_by_1" name="Increment number by 1" key="Cmd+Up" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'increment_number_by_1')" />
			<menuitem id="DWMenu_Commands_ZenCoding_decrement_number_by_1" name="Decrement number by 1" key="Cmd+Down" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'decrement_number_by_1')" />
			<menuitem id="DWMenu_Commands_ZenCoding_increment_number_by_10" name="Increment number by 10" key="Cmd+Opt+Up" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'increment_number_by_10')" />
			<menuitem id="DWMenu_Commands_ZenCoding_decrement_number_by_10" name="Decrement number by 10" key="Cmd+Opt+Down" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'decrement_number_by_10')" />
			<menuitem id="DWMenu_Commands_ZenCoding_increment_number_by_01" name="Increment number by 0.1" key="Opt+Up" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'increment_number_by_01')" />
			<menuitem id="DWMenu_Commands_ZenCoding_decrement_number_by_01" name="Decrement number by 0.1" key="Opt+Down" enabled="dw.getFocus(true) == 'textView' || dw.getFocus(true) == 'html'" command="dw.runCommand('ZenCoding.html', 'decrement_number_by_01')" />
		</menu-insert>
	</configuration-changes>
</macromedia-extension>
